{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "outDir": "dist",
    "lib": ["esnext"],
    "types": ["node"],
    "baseUrl": "./"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
